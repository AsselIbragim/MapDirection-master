<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foi_view">

    <ImageView
        android:id="@+id/foi_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/foi_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textStyle="bold"
        android:text="title"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/foi_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp"/>
    <TextView
        android:id="@+id/foi_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="dsfdsfdsfsd fdsfsdfsd fdsfsdf dfsfdsf fdsfsdfsd fdsfsdfsd fdsfsdfsd fdsfsdfsd"
        android:layout_margin="@dimen/_10sdp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/foi_title"
        app:layout_constraintStart_toEndOf="@id/foi_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6sp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>